source Dependencies/ReleaseTools/Scripts/make-tools

echo "***************"
echo "Releasing macOS"
echo "***************"

set -o pipefail

rt set scheme xXxprojectCamelxXx-Sparkle --platform macOS
rt archive --xcconfig Sources/xXxprojectCamelxXx/Resources/IncludeSparkle.xcconfig 2>/dev/null | xcpretty
rt export --distribution true
rt notarize
rt wait
rt compress
rt publish
